@page
@model Expenses.Pages.CreateModel

@{
    ViewData["Title"] = "Add Expenditure";
}
<h1>Add Expenditure</h1>
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Expenditure.Title" class="control-label"></label>
                <input asp-for="Expenditure.Title" class="form-control" />
                <span asp-validation-for="Expenditure.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expenditure.Amount" class="control-label"></label>
                <input asp-for="Expenditure.Amount" class="form-control" />
                <span asp-validation-for="Expenditure.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expenditure.SpentOn" class="control-label"></label>
                <input asp-for="Expenditure.SpentOn" class="form-control" />
                <span asp-validation-for="Expenditure.SpentOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expenditure.Category" class="control-label"></label>
                <select asp-for="Expenditure.Category" class="form-control">
                    <option value="1">Education</option>
                    <option value="2">Entertainment</option>
                    <option value="3">Food</option>
                    <option value="4">Others</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Expenditure" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
