@page
@model AspNetCoreDemo.Pages.TableModel
@{
    Layout = null;
    var num = 15;
}

<h1>Table for @num</h1>

<table border="1">
    <tr>
        <th>Number</th>
        <th>Multiplier</th>
        <th>Result</th>
    </tr>

    @for (var i = 1; i <= 20; i++)
    {
        <tr>
            <td style="text-align:right">@num</td>
            <td style="text-align:right">@i</td>
            <td style="text-align:right">@(i * num)</td>  
        </tr>
    }
</table>
